<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="46dp"
                    android:layout_height="47dp"
                    android:src="@drawable/age"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:id="@+id/imageView"
                    android:layout_marginLeft="40dp"
                    app:layout_constraintLeft_toLeftOf="parent" />

                <TextView
                    android:layout_width="212dp"
                    android:layout_height="53dp"
                    android:text="Enter your DOB"
                    android:gravity="center"
                    android:textColor="@android:color/black"
                    android:textSize="25dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="-2dp"
                    android:id="@+id/textView5"
                    app:layout_constraintLeft_toRightOf="@+id/imageView"
                    android:layout_marginLeft="8dp" />

            </android.support.constraint.ConstraintLayout>

            <TextView
                android:id="@+id/text_age"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/dot_light_screen2"
                android:gravity="center"
                android:text="20"
                android:textColor="#000066"
                android:textSize="40sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="46dp"
                    android:layout_height="47dp"
                    android:src="@drawable/weight"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:id="@+id/weight_img"
                    android:layout_marginLeft="40dp"
                    app:layout_constraintLeft_toLeftOf="parent" />

                <TextView
                    android:layout_width="212dp"
                    android:layout_height="53dp"
                    android:text="Enter your weight"
                    android:gravity="center"
                    android:textColor="@android:color/black"
                    android:textSize="25dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="0dp"
                    android:id="@+id/textView6"
                    app:layout_constraintLeft_toRightOf="@+id/weight_img"
                    android:layout_marginLeft="8dp" />

            </android.support.constraint.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/weight1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="KG"
                    android:textColor="#000066"
                    android:gravity="center"
                    android:textSize="30dp"
                    android:background="@drawable/profile_box" />
                <TextView
                    android:id="@+id/weight2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="LB"
                    android:gravity="center"
                    android:textSize="30dp"
                    android:textColor="#ffffff"
                    android:background="@drawable/profile_box2" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/text_weight"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/dot_light_screen2"
                android:gravity="center"
                android:text="20"
                android:textColor="#000066"
                android:textSize="40sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="46dp"
                    android:src="@drawable/height"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:id="@+id/height_img"
                    android:layout_marginLeft="40dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    tools:layout_editor_absoluteY="-1dp"
                    tools:layout_editor_absoluteX="32dp" />

                <TextView
                    android:layout_width="212dp"
                    android:layout_height="53dp"
                    android:text="Enter your height"
                    android:gravity="center"
                    android:textColor="@android:color/black"
                    android:textSize="25dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="0dp"
                    android:id="@+id/textView7"
                    app:layout_constraintLeft_toRightOf="@+id/height_img"
                    android:layout_marginLeft="8dp" />

            </android.support.constraint.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/height1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="CM"
                    android:gravity="center"
                    android:textSize="30dp"
                    android:textColor="#000066"
                    android:background="@drawable/profile_box" />

                <TextView
                    android:id="@+id/height2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="FEET"
                    android:gravity="center"
                    android:textSize="30dp"
                    android:textColor="#ffffff"
                    android:background="@drawable/profile_box2" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/text_height"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="20"
                android:textColor="#000066"
                android:textSize="40sp"
                android:gravity="center"
                android:background="@color/dot_light_screen2"/>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>