<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/workout"
            android:foregroundGravity="center"
            android:layout_marginTop="30dp"/>

        <TextView
            android:id="@+id/workout_text"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Where do you workout?"
            android:textSize="30dp" />

        <LinearLayout
            android:id="@+id/workoutLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1" >


            <ImageView
                android:id="@+id/home_btn"
                android:layout_width="140dp"
                android:layout_height="130dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="-50dp"
                android:src="@drawable/home_black" />

            <ImageView
                android:id="@+id/gym_btn"
                android:layout_width="140dp"
                android:layout_height="130dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="-50dp"
                android:src="@drawable/gym_black" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>