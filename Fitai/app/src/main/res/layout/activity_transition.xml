<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fitness"
    tools:context="com.example.user.fitai.Transition" >

    <ImageView
        android:id="@+id/dashboard_image"
        android:layout_width="143dp"
        android:layout_height="139dp"
        app:srcCompat="@drawable/icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="87dp"
        app:layout_constraintHorizontal_bias="0.502" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="98dp"
        android:text="Variance.AI"
        android:textSize="50sp"
        android:gravity="center"
        android:textColor="@color/colorDarkBlue"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@+id/dashboard_image"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="Making Fitness a habit"
        android:gravity="center|bottom"
        android:textSize="20sp"
        android:textColor="@color/colorDarkBlue"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="171dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintHorizontal_bias="0.503" />
</android.support.constraint.ConstraintLayout>
