<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.user.fitai.Logout"
    android:weightSum="1">

    <TextView
        android:id="@+id/code"
        android:layout_width="255dp"
        android:layout_height="45dp"
        android:text="Please enter your verification code"
        android:gravity="center"
        android:layout_weight="0.10"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/editText8"
        app:layout_constraintVertical_bias="0.593" />


    <EditText
        android:id="@+id/editText7"
        android:layout_width="50dp"
        android:layout_height="38dp"
        android:layout_marginBottom="322dp"
        android:layout_marginLeft="45dp"
        android:ems="10"
        android:inputType="number"
        android:maxLength="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/editText9"
        android:layout_width="50dp"
        android:layout_height="38dp"
        android:layout_marginLeft="8dp"
        android:ems="10"
        android:maxLength="1"
        android:inputType="number"
        app:layout_constraintBaseline_toBaselineOf="@+id/editText8"
        app:layout_constraintLeft_toRightOf="@+id/editText7"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/editText8" />


    <EditText
        android:id="@+id/editText8"
        android:layout_width="50dp"
        android:layout_height="38dp"
        android:layout_marginLeft="8dp"
        android:ems="10"
        android:inputType="number"
        android:maxLength="1"
        app:layout_constraintBaseline_toBaselineOf="@+id/editText7"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/editText9"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/editText6"
        android:layout_width="50dp"
        android:layout_height="38dp"
        android:layout_marginLeft="8dp"
        android:maxLength="1"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBaseline_toBaselineOf="@+id/editText7"
        app:layout_constraintLeft_toRightOf="@+id/editText8" />

    <EditText
        android:id="@+id/editText11"
        android:layout_width="50dp"
        android:layout_height="38dp"
        android:ems="10"
        android:inputType="number"
        android:maxLength="1"
        app:layout_constraintBaseline_toBaselineOf="@+id/editText7"
        app:layout_constraintLeft_toRightOf="@+id/editText6"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/verify_btn"
        android:layout_width="161dp"
        android:layout_height="63dp"
        android:text="Verify Email"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        android:layout_marginTop="61dp"
        app:layout_constraintTop_toBottomOf="@+id/editText7" />

</android.support.constraint.ConstraintLayout>
