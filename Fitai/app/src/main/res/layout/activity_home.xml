<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/hme_back1">


        <TextView
            android:id="@+id/set_profile"
            android:layout_width="248dp"
            android:layout_height="49dp"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/border_style"
            android:gravity="center"
            android:text="Complete your profile"
            android:textSize="20dp"
            app:layout_constraintHorizontal_bias="0.535"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="38dp"></TextView>


        <TextView
            android:layout_width="247dp"
            android:layout_height="46dp"
            android:background="@drawable/border_style"
            android:gravity="center"
            android:text="Last Workout Activity"
            android:textSize="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/textView"
            app:layout_constraintHorizontal_bias="0.503"
            android:layout_marginTop="26dp"
            app:layout_constraintTop_toBottomOf="@+id/user_info"></TextView>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="334dp"
            android:layout_height="167dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:srcCompat="@drawable/meditation"
            android:layout_marginTop="18dp"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintHorizontal_bias="0.684"
            tools:layout_editor_absoluteX="26dp" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="229dp"
            android:layout_height="42dp"
            android:background="@drawable/border_style"
            android:gravity="center"
            android:text="Graph of last Workout"
            android:textSize="20dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="68dp"
            android:layout_marginTop="157dp"
            app:layout_constraintTop_toBottomOf="@+id/text2"></TextView>

        <TextView
            android:id="@+id/text2"
            android:layout_width="265dp"
            android:layout_height="45dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/border_style"
            android:gravity="center"
            android:text="Current Training Program"
            android:textSize="20dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"></TextView>

        <TextView
            android:id="@+id/text4"
            android:layout_width="185dp"
            android:layout_height="76dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/border_style"
            android:gravity="center"
            android:text="Total Days 21\nDays Completed 7"
            android:textSize="20dp"
            android:layout_marginRight="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/text2"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/text1" />

        <com.mikhaellopez.circularprogressbar.CircularProgressBar
            android:id="@+id/yourCircularProgressbar"
            android:layout_width="98dp"
            android:layout_height="98dp"
            app:cpb_background_progressbar_color="#FFCDD2"
            app:cpb_background_progressbar_width="5dp"
            app:cpb_progressbar_color="#F44336"
            app:cpb_progressbar_width="10dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/text2"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/text1"
            android:layout_marginLeft="47dp"
            app:layout_constraintVertical_bias="0.486"
            app:layout_constraintLeft_toLeftOf="parent" />

        <com.github.mikephil.charting.charts.HorizontalBarChart
            android:id="@+id/chart"
            android:layout_width="350dp"
            android:layout_height="253dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/text1" />

        <TextView
            android:id="@+id/user_info"
            android:layout_width="290dp"
            android:layout_height="71dp"
            android:text="TextView"
            android:background="@drawable/border_style"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="20dp"
            android:textColor="@android:color/black"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/set_profile" />


    </android.support.constraint.ConstraintLayout>
</ScrollView>