<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#007acc" />
            <corners android:radius="40dp" />
        </shape>
    </item>
    <item
        android:left="1dp"
        android:right="1dp"
        android:top="0dp"
        android:bottom="3dp">
        <shape>
            <solid android:color="#80ccff" />

            <corners android:radius="40dp" />
            <padding
                android:top="10dp"
                android:right="10dp"
                android:bottom="5dp" />
        </shape>
    </item>

</layer-list>